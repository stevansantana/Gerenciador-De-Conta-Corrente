<div class="deposito-page">
  <div class="deposito-container">
    <div class="deposito-header">
      <h2>Realizar Dep√≥sito</h2>
    </div>
    
    <p class="saldo-info">
      Saldo atual: <span class="saldo-valor">R$ <%= @correntista.saldo %></span>
    </p>

    <%= form_with url: "/deposito", method: :post, local: true, class: "deposito-form" do |form| %>
      <div class="form-group">
        <%= form.label :valor, "Valor a depositar (R$):" %>
        <%= form.number_field :valor, step: 0.01, min: 0.01, class: "form-control" %>
      </div>

      <%= form.submit "Depositar", class: "btn-deposito" %>
    <% end %>

    <% if flash[:alert] %>
      <p class="alert-message"><%= flash[:alert] %></p>
    <% end %>

    <%= link_to "Voltar ao menu", menu_path, class: "btn-voltar" %>
  </div>
</div>